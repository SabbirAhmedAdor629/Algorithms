// Select an element and put it in its correct position

class Solution {
    public void sortColors(int[] nums) {
        for (int i = 0; i < nums.length; i++) {
            int last_index = nums.length-i-1;
            
            int max_index = getMaxIndex(nums, 0, last_index);
            
            swap(nums, max_index, last_index);
        }
        System.out.println(nums);
    }
    
    
    static void swap(int[] arr, int first, int second){
        int temp = arr[first];
        arr[first] = arr[second];
        arr[second] = temp;
    }
    
     
    
    
     static int getMaxIndex(int[] nums, int start, int end){
        int max = start;
        for (int i=start+1; i<end; i++){
            if (nums[i] > nums[max]){
                max = i;
            }
        }
        return max;
     }
    
    
}















































public void selectionSort(int[] arr){
        for (int i = 0; i < arr.length - 1; i++) {
            last_index = nums.length-i-1;
            max_index = max(nums, last_index);
            swap(nums, max_index, last_index);
        }
    }
    
    
    public void swapArray(int[] arr,int first,int second){
        int temp = arr[first];
        arr[first] = arr[second];
        arr[second] = temp;
    }
    
    
     public void max(int[] arr, int last_index){
        int max = arr[0];
        for (int i=1; i<last_index; i++){
            if (arr[i] < max){
                max = arr[i];
            }
        }
      }
